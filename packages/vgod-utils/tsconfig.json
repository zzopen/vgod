{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "rootDir": ".",
        "target": "es2018",
        "module": "ESNext",
        "esModuleInterop": true,
        "allowJs": false,
        "sourceMap": false,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "types": [],
        "jsx": "preserve",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}