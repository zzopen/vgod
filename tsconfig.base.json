{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitThis": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "useDefineForClassFields": true,
        /* Bundler mode */
        "moduleResolution": "bundler", // Node
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "sourceMap": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "types": [],
        "rootDir": ".",
        "paths": {
            "@vgod/*": [
                "packages/*"
            ]
        }
    }
}